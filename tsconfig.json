{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "ts-build",
    "noImplicitAny": false,
    "jsx": "react",
    "target": "es5",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2015.collection",
      "es2016",
      "es2016.array.include",
      "es2018",
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "**/__tests__/**",
    "cypress/**",
    "node_modules",
    "demo"
  ]
}
