{
  "compilerOptions": {
    "outDir": "ts-build",
    "noImplicitAny": false,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.collection",
      "es2016",
      "es2016.array.include",
      "es2018"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./demo/**/*.ts",
    "./demo/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "cypress/**"
  ]
}